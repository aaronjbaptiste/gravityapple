#####  Contains stuff you don't mind being visible in source control

#####  Customise these

timezone: Europe/London
wordpress_site_title: "Site Name"
admin_email: email@domain.com

wordpress_theme_repo: https://github.com/aaronjbaptiste/gravityapple-wordpress-theme.git
wordpress_theme_name: "gravityapple"

#####  Generally leave these

wordpress_db_prefix: wp_
wordpress_dir: "{{ web_root }}/wordpress"
wordpress_home_url: "{{ inventory_hostname }}"